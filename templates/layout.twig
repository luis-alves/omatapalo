    <script>
        $("#alterar-ci [data-ci]").click(function(event) {
            // pega o ano selecionado pelo evento do clique
            var value = $(this).data("ci");
            // executa uma função em ajax direcionando para outra página em PHP que irá trocar a sessão
            var url = "/omatapalo_v3/cind";

            var currentUrl = window.location.href;

            $.post(url, {
                ci: value
            }, function() {
                window.location.href = currentUrl;
                // window.location.href = "/omatapalo_v3/home";
            });

            event.preventDefault();
        });
    </script>
