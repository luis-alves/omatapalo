{% extends 'layout.twig' %}

{% block content %}

    <table class="table table-striped table-bordered table-hover" cellpadding="0" cellspacing="0" id="myTable" style="width:100%;overflow-x:auto">
        <caption style="">
            <div class="centrar_rm">
                <h2 class="colorir">{{title}}</h2>
            </div>
            <h3>
                {{mes_titulo}}
                de
                {{ session.ano }}</h3>
        </caption>

        <div class="container">

            <thead>
                <tr>
                    <th class="text-center" style="vertical-align:middle;">MENSAL</th>
                    <th class="text-center">QUANTIDADE
                        <br>PRODUZIDA</th>
                    <th class="text-center">VALOR
                        <br>PRODUÇÃO</th>
                    <th class="text-center">CUSTOS DE
                        <br>OPERAÇÃO</th>
                    <th class="text-center">RESULTADO
                        <br>OPERACIONAL</th>
                    <th class="text-center">CI
                        <br>OPERACIONAL</th>
                    <th class="text-center">VALOR STOCK
                        <br>MÊS ANTERIOR</th>
                    <th class="text-center">VALOR STOCK
                        <br>MÊS ACTUAL</th>
                    <th class="text-center">VARIAÇÃO DE
                        <br>STOCK</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th class="text-center">TOTAIS</th>
                    <th class="text-center">{{ somaQuantidadeProduzida|number_format(0,","," ") }}</th>
                    <th class="text-center">{{ somaValorProduzida|number_format(0,","," ") }}</th>
                    <th class="text-center">{{ somaTotalCustos|number_format(0,","," ") }}</th>
                    <th class="text-center">{{ somaResultadoOperacional|number_format(0,","," ") }}</th>
                    <th class="text-center">{{ mediaCIOperacional|number_format(1,","," ") }}</th>
                    <th class="text-center">{{ somaValorStockMesAnterior|number_format(0,","," ") }}</th>
                    <th class="text-center">{{ somaValorStockMes|number_format(0,","," ") }}</th>
                    <th class="text-center">{{ somaVariacaoMensal|number_format(0,","," ") }}</th>
                </tr>
            </tfoot>
            <tbody>
                {% for ci, codigo in cisRelatorioMensal %}
                    <tr>
                        <td class="text-center">{{ ci }}</td>
                        <td class="text-center">{{ quantidadeProduzida[ci]|number_format(0,","," ") }}</td>
                        <td class="text-center">{{ valorProduzida[ci]|number_format(0,","," ") }}</td>
                        <td class="text-center">{{ totalCustos[ci]|number_format(0,","," ") }}</td>
                        <td class="text-center">{{ resultadoOperacional[ci]|number_format(0,","," ") }}</td>
                        <td class="text-center">{{ ciOperacional[ci]|number_format(1,","," ") }}</td>
                        <td class="text-center">{{ valorStockMesAnterior[ci]|number_format(0,","," ") }}</td>
                        <td class="text-center">{{ valorStockMes[ci]|number_format(0,","," ") }}</td>
                        <td class="text-center">{{ variacaoMensal[ci]|number_format(0,","," ") }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="container">

