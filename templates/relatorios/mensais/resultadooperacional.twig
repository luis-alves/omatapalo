                    data: {{ caraculoGraficoCI|json_encode|raw }}
                }

            ]
        }

        //Get context with jQuery - using jQuery's .get() method.
        var ctx = $("#myChart").get(0).getContext("2d");
        new Chart(ctx, {
            type: 'line',
            data: data,
            options: {
                legend: {
                    position: 'bottom'
