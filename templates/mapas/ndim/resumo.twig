{% extends 'layout.twig' %}

{% block content %}
<br>
<div class="container">
    <div class="colorir" style="background-color:#003686;padding:5px;">
        <h2 style="color:white;text-align:center;">{{title}}</h2>
     </div>
</div>

<br>

{% if erro != null %}
<div class="container" style="margin-top:100px">

    <div class="alert alert-danger" role="alert" style="width:15.5em;
    display:block;margin-left:auto;margin-right:auto;">
    <h4 style="text-align:center;">Sem dados</h4><br>
                                    <p style="text-align:center">Retornar a
    <a href="/omatapalo_v3/mapas" class="alert-link">Mapas</a></p></div>
</div>
{% else %}
<div class="container">

    {% for item,valores in obras %}

    <div id="accordion" role="tablist" aria-multiselectable="true" class="centrar">
      <div class="card">
        <div class="card-header" role="tab" id="headingOne">
          <h5 class="mb-0">
              <p>
                <a class="btn btn-warning" style="width:35em;height:3em;" data-toggle="collapse" href="#{{ item }}" aria-expanded="true" aria-controls="NDIM">
                    {{ valores['nome'] }}
                </a>
              </p>
          </h5>
        </div>
        <div id="{{ item }}" class="collapse" role="tabpanel" aria-labelledby="headingOne">
          <div class="card-block">
            <form action="/omatapalo_v3/mapas/ndim/{{ session.ano }}/{{ mes }}/{{ valores['id'] }}" method="post">
              <button class="btn btn-default" style="width:35em;" type="submit" name="button">Mapa Resumo da NDIM</button>
            </form><br>
            <form action="/omatapalo_v3/mapas/ndim/detalhado/{{ session.ano }}/{{ mes }}/{{ valores['id'] }}" method="post">
              <button class="btn btn-default" style="width:35em;" type="submit" name="button">Anexo com Fornecimentos Individualizados</button>
            </form> <br>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
</div>

{% endif %}








{% endblock %}
